{
    "name": "vite-template",
    "version": "0.0.0",
    "author": "Nikita Lagutin <lagutin.na@yandex.ru>",
    "description": "Template for development with Vue 3 and Vite",
    "scripts": {
        "dev": "vite --open",
        "build": "vite build",
        "preview": "vite preview --port 3000",
        "el:check": "eslint --ext .js,.vue --ignore-path .gitignore .",
        "sl:check": "stylelint '**/*.{css,scss,vue}'",
        "lint:check": "npm run el:check & npm run sl:check",
        "el:fix": "eslint --ext .js,.vue --ignore-path .gitignore --fix .",
        "sl:fix": "stylelint '**/*.{css,scss,vue}' --fix",
        "lint:fix": "npm run el:fix & npm run sl:fix",
        "format": "prettier . --write",
        "ncu:check": "ncu",
        "ncu:update": "ncu -u",
        "prepare": "husky install"
    },
    "dependencies": {
        "vue": "^3.2.25"
    },
    "devDependencies": {
        "@amatlash/vite-plugin-stylelint": "^1.2.0",
        "@vitejs/plugin-vue": "^2.1.0",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-vue": "^8.4.1",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.3",
        "npm-check-updates": "^12.2.1",
        "postcss-html": "^1.3.0",
        "postcss-scss": "^4.0.3",
        "prettier": "2.5.1",
        "sass": "^1.49.7",
        "stylelint": "^14.3.0",
        "stylelint-config-prettier-scss": "^0.0.1",
        "stylelint-config-recommended-scss": "^5.0.2",
        "stylelint-config-recommended-vue": "^1.1.0",
        "stylelint-config-standard-scss": "^3.0.0",
        "vite": "^2.7.13",
        "vite-plugin-eslint": "^1.3.0"
    }
}
